/* pages/home/home.wxss */

.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgb(239, 239, 242);
}

.time1{
  width: 97%;
  margin:1.5%;
  background: white;
  box-shadow: 0px 3px #EBEDF1;
  border-radius: 6px;
  
  
}
.timehead{
  text-align: center;
  margin-top: 3%; 
  color:#D4D9DE;
  font-size: 14px;
}

.divLine{
 background: #E0E3DA;
 width: 95%;
 margin-left: 2.5%;
 height: 5rpx;
 margin-top: 2%;
 border-radius: 2px;
}
.choose{
  overflow: hidden;
}
.selectDate{
  margin-top: 2.5%;
  margin-left: 5%;
  width: 52.5%;
  height: 80%;
  float: left;
}
.topLine{
  margin-left: 5%;
  font-size: 12px;
  color:rgb(143, 143, 143);
}
.bottomLine{
  text-align: center;
  font-size: 25px;
}

.verticalLine{
  float: left;
  width: 6rpx;
  height: 90%;
  margin-top: 2%;
  margin-left: 2.5%;
  background: #E0E3DA;
}
.overAll{
  float: left;
  width: 30%;
  margin-left: 2.5%;
  margin-top: 2.25%;
  height: 85%;
  color:rgb(143, 143, 143);
}
.firstLine{
  text-align: center;
  font-size: 17px;
  height: 40%;
}
.secondLine{
  text-align: center;
  font-size: 10px;
  height: 15%;
  
}
.thirdLine{
  text-align: center;
  font-size: 17px;
  height: 40%;
}
.find{
  text-align: center;
  margin-top: 5%;
  width: 90%;
  height:50px;
  background-color: #1E90FF;
  border-radius: 50px;
  color:white;
  padding: 2px;

}
.cards{
  width: 97%;
  margin:1.5%;
  background: white;
  box-shadow: 0px 3px #EBEDF1;
  border-radius: 6px;
}
.showtime {
  margin-top: 5%;
  height: 35px;
  width: 90%;
  font-size: 30px;
}

.card {
  width: 95%;
  margin-top: 5%;
  margin-left: 2.5%;
  border: 1px solid #fff;
  border-radius: 5px;
  font-size: 20px;
  margin-bottom: 3%;
  position: relative;
}

.image {
  width: 100%;
  border-radius: 3px;
  background-color: #eee;
}

.time {
  float: right;
  margin-top: 370px;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 20px;
}

